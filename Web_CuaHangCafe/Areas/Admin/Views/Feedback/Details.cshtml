@model Web_CuaHangCafe.Models.TbPhanHoi
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-4">
    <div class="row mb-3">
        <div class="col-lg-8 col-md-12 col-sm-12">
            <h3 class="fw-semibold text-dark">Chi tiết phản hồi</h3>
        </div>
    </div>

    <div class="card shadow-sm rounded p-4">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-bold text-dark">
                Mã phản hồi:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Id)
            </dd>

            <dt class="col-sm-3 fw-bold text-dark">
                Tiêu đề:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TieuDe)
            </dd>

            <dt class="col-sm-3 fw-bold text-dark">
                Số điện thoại:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SoDienThoai)
            </dd>

            <dt class="col-sm-3 fw-bold text-dark">
                Nội dung:
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NoiDung)
            </dd>
        </dl>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay về danh sách
        </a>
    </div>
</div>

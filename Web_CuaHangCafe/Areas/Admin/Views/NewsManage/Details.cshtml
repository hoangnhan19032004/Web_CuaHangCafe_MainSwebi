@model Web_CuaHangCafe.Models.TbTinTuc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-4">
    <div class="row mb-3">
        <div class="col">
            <h3 class="fw-semibold">Chi tiết tin tức: <span class="text-muted">@ViewBag.name</span></h3>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Mã tin tức:</dt>
                <dd class="col-sm-9">@Model.MaTinTuc</dd>

                <dt class="col-sm-3">Tiêu đề:</dt>
                <dd class="col-sm-9">@Model.TieuDe</dd>

                <dt class="col-sm-3">Ngày đăng:</dt>
                <dd class="col-sm-9">@(Model.NgayDang?.ToString("dd/MM/yyyy"))</dd>

                <dt class="col-sm-3">Nội dung:</dt>
                <dd class="col-sm-9">@Model.NoiDung</dd>

                <dt class="col-sm-3">Hình ảnh:</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.HinhAnh))
                    {
                        <img src="@Url.Content("~/img/news/" + Model.HinhAnh)" alt="Hình ảnh tin tức" class="img-fluid rounded shadow-sm" style="max-width:300px;" />
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Không có hình ảnh</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Quay về
        </a>
        <a asp-action="Edit" asp-route-id="@Model.MaTinTuc" asp-route-name="@Model.TieuDe" class="btn btn-primary">
            <i class="fas fa-edit"></i> Sửa
        </a>
    </div>
</div>

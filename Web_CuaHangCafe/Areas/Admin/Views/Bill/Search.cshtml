@using Web_CuaHangCafe.Models
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<TbHoaDonBan>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-3">
        <h3 class="fw-semibold text-dark">
            Hoá đơn bán ngày:
            <span class="text-muted text-capitalize">@ViewBag.search</span>
        </h3>
        <form asp-action="Search" asp-controller="Bill" method="get" class="d-flex">
            <input type="date" name="search" class="form-control me-2" autocomplete="off" />
            <button type="submit" class="btn btn-outline-primary shadow-sm">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>

    <div class="card shadow-sm rounded p-3">
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
            <span class="text-success fw-semibold">@TempData["Message"]</span>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered align-middle mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th>Mã hoá đơn</th>
                        <th>Ngày bán</th>
                        <th>SĐT khách hàng</th>
                        <th>Tổng tiền</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Không tìm thấy hoá đơn nào.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.MaHoaDon</td>
                                <td class="text-center">@(item.NgayBan?.ToString("dd/MM/yyyy"))</td>
                                <td class="text-center">@item.CustomerId</td>
                                <td class="text-end">@item.TongTien?.ToString("N0") &#8363;</td>
                                <td class="text-center">
                                    <a class="btn btn-primary btn-sm shadow-sm"
                                       asp-action="Details" asp-route-id="@item.MaHoaDon" asp-route-name="@item.MaHoaDon">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Search", new { page = page }),
                 new PagedListRenderOptions
        {
            MaximumPageNumbersToDisplay = 5,
            LiElementClasses = new List<string> { "page-item" },
            PageClasses = new List<string> { "page-link" },
            UlElementClasses = new List<string> { "pagination", "justify-content-center" }
        })
    </div>
</div>

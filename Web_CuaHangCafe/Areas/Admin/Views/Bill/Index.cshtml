@using Web_CuaHangCafe.Models
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<TbHoaDonBan>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Quản lí hoá đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-semibold text-dark">Quản lý hóa đơn bán</h3>

        <div class="d-flex" style="gap: 0.5rem;">
            <!-- FORM TÌM KIẾM THEO NGÀY -->
            <form asp-action="Search" asp-controller="Bill" method="get" class="d-flex" style="max-width: 300px">
                <input type="date" name="search" class="form-control form-control-sm me-2"
                       style="border: 1px solid #ced4da;" value="@ViewBag.search" />
                <button class="btn btn-outline-primary btn-sm" type="submit">
                    <i class="fa fa-search"></i>
                </button>
            </form>

            <!-- NÚT XUẤT FILE EXCEL -->
            <a asp-action="ExportToExcel" asp-controller="Bill" asp-route-search="@ViewBag.search"
               class="btn btn-success btn-sm shadow-sm">
                <i class="fas fa-file-excel me-1"></i> Xuất file Excel
            </a>
        </div>
    </div>

    <div class="card shadow-sm rounded">
        <div class="table-responsive">
            <table class="table table-bordered mb-0 align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th style="width: 10%">Mã HĐ</th>
                        <th style="width: 15%">Ngày bán</th>
                        <th style="width: 20%">Tên khách hàng</th>
                        <th style="width: 20%">SĐT khách hàng</th>
                        <th style="width: 15%">Tổng tiền</th>
                        <th style="width: 20%">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">Không có hóa đơn nào.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.MaHoaDon</td>
                                <td class="text-center">@(item.NgayBan?.ToString("dd/MM/yyyy"))</td>
                                <td class="text-center">@item.Customer?.TenKhachHang</td>
                                <td class="text-center">@item.Customer?.SdtKhachHang</td>
                                <td class="text-end">@String.Format("{0:N0}", item.TongTien) &#8363;</td>
                                <td class="text-center">
                                    <a class="btn btn-primary btn-sm me-1" asp-action="Details" asp-route-id="@item.MaHoaDon">
                                        <i class="fas fa-eye me-1"></i> Xem
                                    </a>
                                    <a class="btn btn-warning btn-sm me-1" asp-action="Edit" asp-route-id="@item.MaHoaDon">
                                        <i class="fas fa-edit me-1"></i> Sửa
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.MaHoaDon" method="post" class="d-inline"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa hóa đơn này không?');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash-alt me-1"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                 new PagedListRenderOptions
        {
            MaximumPageNumbersToDisplay = 5,
            LiElementClasses = new List<string> { "page-item" },
            PageClasses = new List<string> { "page-link" },
            UlElementClasses = new List<string> { "pagination", "justify-content-center" }
        })
    </div>
</div>

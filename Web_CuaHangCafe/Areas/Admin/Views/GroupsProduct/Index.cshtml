@using Web_CuaHangCafe.Models
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TbNhomSanPham>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Nhóm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-4">
    <div class="row mb-3 align-items-center">
        <div class="col-lg-8 col-md-12">
            <h3 class="fw-semibold text-dark">Quản lý nhóm sản phẩm</h3>
        </div>
        <div class="col-lg-4 col-md-12">
            <form asp-action="Search" method="get" class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Tìm kiếm..." autocomplete="off">
                <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
            </form>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
    </div>

    <div class="card shadow-sm rounded">
        <div class="table-responsive p-3">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã nhóm sản phẩm</th>
                        <th>Tên nhóm sản phẩm</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaNhomSp</td>
                            <td>@item.TenNhomSp</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-success me-1"
                                   asp-action="Edit" asp-route-id="@item.MaNhomSp" asp-route-name="@item.TenNhomSp">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a class="btn btn-sm btn-outline-danger"
                                   asp-action="Delete" asp-route-id="@item.MaNhomSp">
                                    <i class="fas fa-trash-alt"></i> Xoá
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), new PagedListRenderOptions
   {
       MaximumPageNumbersToDisplay = 5,
       LiElementClasses = new List<string> { "page-item" },
       PageClasses = new List<string> { "page-link" }
   })
    </div>
</div>

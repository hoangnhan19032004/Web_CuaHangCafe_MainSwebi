@model Web_CuaHangCafe.Models.TbQuanTriVien
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập | SwebiCoffee Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
        body {
            background: url('/img/categories/swebif.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-card {
            backdrop-filter: blur(8px);
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            width: 100%;
            max-width: 400px;
        }

            .login-card h3 {
                font-weight: bold;
            }

            .login-card .form-control {
                border-radius: 8px;
            }

            .login-card .btn-primary {
                border-radius: 8px;
            }

        .brand-logo i {
            color: #8B4513;
        }

        .brand-logo strong {
            color: #5a2e0c;
        }

        .form-label {
            font-weight: 500;
        }

        @@media (max-width: 768px) {
            .login-card

        {
            margin: 20px;
        }

        }</style>
</head>
<body class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="login-card">
        <div class="text-center brand-logo mb-4">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="text-decoration-none">
                <h3><i class="fa-solid fa-mug-saucer me-2"></i><strong>SWEBI COFFEE</strong></h3>
            </a>
            <p class="text-muted mb-0">Đăng nhập quản trị</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        @using (Html.BeginForm("Login", "Accounts", FormMethod.Post, new { area = "Admin" }))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Tên đăng nhập</label>
                @Html.TextBoxFor(x => x.TenNguoiDung, new
                    {
                        @class = "form-control",
                        placeholder = "Tên người dùng",
                        required = "required",
                        autofocus = "autofocus",
                        autocomplete = "off"
                    })
            </div>

            <div class="mb-4">
                <label class="form-label">Mật khẩu</label>
                @Html.PasswordFor(x => x.MatKhau, new
                    {
                        @class = "form-control",
                        placeholder = "Mật khẩu",
                        required = "required"
                    })
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
                </button>
            </div>
        }
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

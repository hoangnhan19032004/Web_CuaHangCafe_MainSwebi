@model Web_CuaHangCafe.Models.TbQuanTriVien
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4 mb-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom">
            <h5 class="mb-0 fw-semibold">
                Thay đổi thông tin đăng nhập: <span class="text-muted">@ViewBag.name</span>
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="TenNguoiDung" class="form-label">Tên người dùng</label>
                    <input asp-for="TenNguoiDung" class="form-control" placeholder="Nhập tên đăng nhập mới" />
                    <span asp-validation-for="TenNguoiDung" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MatKhau" class="form-label">Nhập mật khẩu mới</label>
                    <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu mới" />
                    <span asp-validation-for="MatKhau" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay về
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

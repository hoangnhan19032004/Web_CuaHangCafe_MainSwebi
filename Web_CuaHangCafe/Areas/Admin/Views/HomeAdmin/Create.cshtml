@model Web_CuaHangCafe.ViewModels.CreateProductViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-4">
    <div class="row mb-3">
        <div class="col-lg-8 col-md-12">
            <h3 class="fw-semibold text-dark">Thêm sản phẩm</h3>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label">Tên sản phẩm</label>
                    <input asp-for="TenSanPham" class="form-control" />
                    <span asp-validation-for="TenSanPham" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Giá bán</label>
                    <input asp-for="GiaBan" class="form-control" />
                    <span asp-validation-for="GiaBan" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hình ảnh</label>
                    <input asp-for="HinhAnh" type="file" class="form-control" id="HinhAnh" onchange="previewImage()" />
                    <span asp-validation-for="HinhAnh" class="text-danger"></span>
                    <img id="imgPreview" class="img-thumbnail mt-2" style="max-width: 300px; display:none;" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Ghi chú</label>
                    <input asp-for="GhiChu" class="form-control" />
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Loại sản phẩm</label>
                    <select asp-for="MaNhomSp" class="form-select" asp-items="Model.DanhSachNhomSp"></select>
                    <span asp-validation-for="MaNhomSp" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Quay về
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    function previewImage() {
        var fileInput = document.getElementById("HinhAnh");
        var imgPreview = document.getElementById("imgPreview");

        if (fileInput.files && fileInput.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                imgPreview.src = e.target.result;
                imgPreview.style.display = "block";
            };

            reader.readAsDataURL(fileInput.files[0]);
        }
    }
</script>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Web_CuaHangCafe.ViewModels.CreateProductViewModel

@{
    ViewData["Title"] = "Sửa thông tin sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-4">
    <div class="row mb-3">
        <div class="col-lg-8 col-md-12">
            <h3 class="fw-semibold text-dark">
                Sửa sản phẩm: <span class="text-muted">@ViewBag.name</span>
            </h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="MaSanPham" />

                <div class="mb-3">
                    <label class="form-label">Tên sản phẩm</label>
                    <input asp-for="TenSanPham" class="form-control" />
                    <span asp-validation-for="TenSanPham" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Giá bán</label>
                    <input asp-for="GiaBan" class="form-control" />
                    <span asp-validation-for="GiaBan" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Mô tả</label>
                    <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hình ảnh</label>
                    <input asp-for="HinhAnh" type="file" class="form-control" />
                    <span asp-validation-for="HinhAnh" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Ghi chú</label>
                    <input asp-for="GhiChu" class="form-control" />
                    <span asp-validation-for="GhiChu" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Loại sản phẩm</label>
                    <select asp-for="MaNhomSp" class="form-select" asp-items="Model.DanhSachNhomSp"></select>
                    <span asp-validation-for="MaNhomSp" class="text-danger"></span>
                </div>

                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Quay về
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

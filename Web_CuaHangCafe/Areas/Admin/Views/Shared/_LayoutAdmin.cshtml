@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] | Quản trị SWEBI COFFEE</title>
    <link rel="shortcut icon" href="~/favicon.ico" />

    <!-- Fonts & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style-admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style-admin-additional.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f6f9;
            color: #212529;
            transition: all 0.3s ease;
        }

        .navbar {
            background-color: #fff;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            z-index: 1030;
        }

        .admin__logo {
            font-weight: 700;
            color: #007bff !important;
            font-size: 1.3rem;
            text-transform: uppercase;
        }

        .sidebar {
            background-color: #fff;
            border-right: 1px solid #e0e0e0;
            padding-top: 1rem;
            width: 220px;
            position: fixed;
            top: 70px;
            left: 0;
            height: calc(100vh - 70px);
            overflow-y: auto;
            z-index: 1020;
        }

            .sidebar .nav-link {
                color: #212529;
                font-weight: 500;
                padding: 10px 16px;
                border-radius: 8px;
                transition: background-color 0.2s;
                display: flex;
                align-items: center;
                gap: 8px;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #e7f1ff;
                    color: #0d6efd;
                }

        .main-panel {
            margin-left: 220px;
            padding: 2rem;
        }

        footer.footer {
            background-color: #fff;
            border-top: 1px solid #e0e0e0;
            font-size: 0.9rem;
            color: #6c757d;
        }

            footer.footer a {
                color: #007bff;
                font-weight: 600;
            }

        .nav-link i {
            width: 20px;
            text-align: center;
        }

        /* Loading spinner */
        #loading {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255,255,255,0.9);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 2000;
        }

        @@media (max-width: 768px) {
            .sidebar {
                display: none;
            }

                .sidebar.show {
                    display: block;
                    position: absolute;
                    top: 70px;
                    left: 0;
                    background: #fff;
                    width: 220px;
                    z-index: 1040;
                    border-right: 1px solid #ddd;
                }

            .main-panel {
                margin-left: 0 !important;
            }
        }
    </style>
</head>
<body>
    <!-- Loading spinner -->
    <div id="loading">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
    </div>

    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand admin__logo" asp-controller="HomeAdmin" asp-action="Index">
                    <i class="fas fa-mug-hot me-2"></i>SWEBI ADMIN
                </a>
                <button class="navbar-toggler" type="button" id="toggleSidebar">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Accounts" asp-action="Logout" class="nav-link fw-semibold">
                                <i class="fas fa-sign-out-alt me-1"></i> Đăng xuất
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="row" style="margin-top: 80px;">
            <nav class="sidebar col-md-2 d-md-block" id="adminSidebar">
                <ul class="nav flex-column">
                    <li class="nav-item"><a asp-controller="HomeAdmin" asp-action="Index" class="nav-link"><i class="fas fa-box-open"></i><span>Sản phẩm</span></a></li>
                    <li class="nav-item"><a asp-controller="GroupsProduct" asp-action="Index" class="nav-link"><i class="fas fa-layer-group"></i><span>Nhóm sản phẩm</span></a></li>
                    <li class="nav-item"><a asp-controller="Bill" asp-action="Index" class="nav-link"><i class="fas fa-file-invoice-dollar"></i><span>Hóa đơn</span></a></li>
                    <li class="nav-item"><a asp-controller="Clients" asp-action="Index" class="nav-link"><i class="fas fa-users"></i><span>Khách hàng</span></a></li>
                    <li class="nav-item"><a asp-controller="NewsManage" asp-action="Index" class="nav-link"><i class="fas fa-newspaper"></i><span>Bài viết</span></a></li>
                    <li class="nav-item"><a asp-controller="Feedback" asp-action="Index" class="nav-link"><i class="fas fa-comment-dots"></i><span>Phản hồi</span></a></li>
                    <li class="nav-item"><a asp-controller="Accounts" asp-action="Index" class="nav-link"><i class="fas fa-user-shield"></i><span>Tài khoản</span></a></li>
                </ul>
            </nav>

            <main class="main-panel col-md-10 ms-sm-auto">
                @RenderBody()

                <footer class="footer mt-4 py-3 px-2 rounded">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <span>
                            Bản quyền &copy; <script>document.write(new Date().getFullYear());</script> -
                            <a asp-area="" asp-controller="Home" asp-action="Index">SWEBI COFFEE</a>
                        </span>
                        <span>Thiết kế bởi hoangnhan93204@gmail.com</span>
                    </div>
                </footer>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/fontawesome/js/all.min.js"></script>
    <script src="~/js/main-admin.js" asp-append-version="true"></script>
    <script src="~/js/main-admin-additional.js" asp-append-version="true"></script>

    <script>
        // Hide loading spinner after page loads
        window.addEventListener('load', function () {
            document.getElementById('loading').style.display = 'none';
        });

        // Toggle sidebar on mobile
        document.getElementById('toggleSidebar')?.addEventListener('click', function () {
            document.getElementById('adminSidebar')?.classList.toggle('show');
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

@using Web_CuaHangCafe.Models
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TbKhachHang>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-3">
        <h3 class="fw-semibold text-dark">Danh sách khách hàng</h3>
        <form asp-action="Search" asp-controller="Clients" method="get" class="d-flex">
            <input type="text" name="search" class="form-control me-2 shadow-sm" placeholder="Tìm kiếm..." autocomplete="off" />
            <button type="submit" class="btn btn-outline-primary shadow-sm">
                <i class="fa fa-search"></i>
            </button>
        </form>
    </div>

    <div class="card shadow-sm rounded p-3">
        <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
            <a asp-action="Create" class="btn btn-success shadow-sm">
                <i class="fas fa-plus me-1"></i> Thêm mới
            </a>
            <span class="text-success fw-semibold">@TempData["Message"]</span>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered align-middle mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th>Mã khách hàng</th>
                        <th>Tên khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Địa chỉ</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Không có khách hàng nào.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.Id</td>
                                <td>@item.TenKhachHang</td>
                                <td class="text-center">@item.SdtKhachHang</td>
                                <td>@item.DiaChi</td>
                                <td class="text-center">
                                    <a class="btn btn-primary btn-sm me-1 shadow-sm"
                                       asp-action="Edit" asp-route-id="@item.Id" asp-route-name="@item.TenKhachHang">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <a class="btn btn-danger btn-sm shadow-sm"
                                       asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="fas fa-trash-alt"></i> Xoá
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
                 new PagedListRenderOptions
        {
            MaximumPageNumbersToDisplay = 5,
            LiElementClasses = new List<string> { "page-item" },
            PageClasses = new List<string> { "page-link" },
            UlElementClasses = new List<string> { "pagination", "justify-content-center" }
        })
    </div>
</div>

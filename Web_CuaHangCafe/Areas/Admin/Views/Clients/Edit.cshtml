@model Web_CuaHangCafe.Models.TbKhachHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Sửa khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap mb-3">
        <h3 class="fw-semibold text-dark">
            Sửa khách hàng: <span class="text-muted">@ViewBag.name</span>
        </h3>
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-1"></i> Quay về danh sách
        </a>
    </div>

    <div class="card shadow-sm rounded p-4 col-md-6 mx-auto">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="TenKhachHang" class="form-label">Họ và tên</label>
                <input asp-for="TenKhachHang" class="form-control shadow-sm" />
                <span asp-validation-for="TenKhachHang" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SdtKhachHang" class="form-label">Số điện thoại</label>
                <input asp-for="SdtKhachHang" class="form-control shadow-sm" />
                <span asp-validation-for="SdtKhachHang" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                <input asp-for="DiaChi" class="form-control shadow-sm" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

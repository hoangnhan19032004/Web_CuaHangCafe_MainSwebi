@model Web_CuaHangCafe.Models.TbPhanHoi

@{
    ViewData["Title"] = "Liên hệ";
    ViewData["Contact"] = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i>
                        Trang chủ
                    </a>
                    <span>Liên hệ</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Contact Section Begin -->
<section class="contact spad" style="background-color: #f9f9f9;">
    <div class="container">
        <div class="row g-5">
            <!-- Contact Info & Form -->
            <div class="col-lg-6 col-md-6">
                <div class="contact__content p-4 shadow-sm rounded bg-white">
                    <!-- Contact Info -->
                    <div class="contact__address mb-4">
                        <h5 class="fw-bold mb-4">Thông tin liên hệ</h5>
                        <ul class="list-unstyled">
                            <li class="mb-3">
                                <h6 class="d-flex align-items-center">
                                    <i class="fas fa-location-arrow me-2 text-primary"></i> Địa chỉ
                                </h6>
                                <p class="mb-0">250 (Góc đường số 13) Tên Lửa, Bình Trị Đông B, Bình Tân, HCM</p>
                            </li>
                            <li class="mb-3">
                                <h6 class="d-flex align-items-center">
                                    <i class="fas fa-phone me-2 text-primary"></i> Điện thoại
                                </h6>
                                <p class="mb-0">028 6686 2559</p>
                            </li>
                            <li>
                                <h6 class="d-flex align-items-center">
                                    <i class="fas fa-envelope me-2 text-primary"></i> Hỗ trợ
                                </h6>
                                <p class="mb-0">hoangnhan93204@gmail.com</p>
                            </li>
                        </ul>
                    </div>

                    <!-- Contact Form -->
                    <div class="contact__form">
                        <h5 class="fw-bold mb-3">Gửi lời nhắn</h5>

                        @if (TempData["Message"] != null)
                        {
                            var status = TempData["Status"]?.ToString();
                            var alertClass = status == "success" ? "alert-success" : "alert-danger";
                            <div class="alert @alertClass alert-dismissible fade show mt-3" role="alert">
                                @TempData["Message"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form asp-action="Index" method="post" class="mt-3">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                            <div class="mb-3">
                                <input asp-for="TieuDe" class="form-control rounded" placeholder="Tiêu đề" />
                                <span asp-validation-for="TieuDe" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <input asp-for="SoDienThoai" class="form-control rounded" placeholder="Số điện thoại" />
                                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <textarea asp-for="NoiDung" class="form-control rounded" rows="4" placeholder="Lời nhắn"></textarea>
                                <span asp-validation-for="NoiDung" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Gửi lời nhắn</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Map -->
            <div class="col-lg-6 col-md-6">
                <div class="contact__map shadow-sm rounded overflow-hidden h-100">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.854767596709!2d106.6103337747661!3d10.745674459760787!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752dcc181fa0e3%3A0xe4868d9ec3721ffd!2sSwebi%20Coffee!5e0!3m2!1svi!2s!4v1743489673056!5m2!1svi!2s"
                            width="100%" height="100%" style="border:0; min-height: 450px;" allowfullscreen=""
                            loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

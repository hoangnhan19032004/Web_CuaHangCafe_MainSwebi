@model IEnumerable<Web_CuaHangCafe.Models.CartItem>

@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var totalAmount = Model.Sum(item => item.ThanhTien);
    var culture = new System.Globalization.CultureInfo("vi-VN");
}

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Trang chủ</a>
                    <a asp-controller="Cart" asp-action="Index">Giỏ hàng</a>
                    <span>Thanh toán</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <form asp-controller="Cart" asp-action="Confirmation" method="post" class="checkout__form">
            <div class="row">
                <!-- Thông tin khách hàng -->
                <div class="col-lg-8">
                    <h5>Chi tiết hoá đơn</h5>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Họ và tên <span>*</span></p>
                                <input type="text" name="CustomerName" placeholder="Nhập họ và tên" required />
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="checkout__form__input">
                                <p>Số điện thoại <span>*</span></p>
                                <input type="tel" name="PhoneNumber" pattern="[0-9]{10}" placeholder="Nhập số điện thoại" required />
                            </div>
                            <div class="checkout__form__input">
                                <p>Địa chỉ <span>*</span></p>
                                <input type="text" name="Address" placeholder="Nhập địa chỉ giao hàng" required />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Đơn hàng -->
                <div class="col-lg-4">
                    <div class="checkout__order">
                        <h5>Đơn hàng của bạn</h5>
                        <div class="checkout__order__product">
                            <ul>
                                <li>
                                    <span class="top__text">Sản phẩm</span>
                                    <span class="top__text__right">Thành tiền</span>
                                </li>
                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                    var item = Model.ElementAt(i);
                                    <li>
                                        <p style="display:inline; font-weight:500;">@(i + 1). </p>
                                        @item.TenSp
                                        <span class="badge bg-primary text-white ms-1">Size @item.Size</span>
                                        <br />
                                        <small>@item.SoLuong x @item.DonGia.ToString("C0", culture)</small><br />
                                        @if (!string.IsNullOrWhiteSpace(item.GhiChu))
                                        {
                                            <span class="text-muted small">Ghi chú: @item.GhiChu</span>

                                            <br />
                                        }
                                        <span>@item.ThanhTien.ToString("C0", culture)</span>

                                        <!-- Hidden input để gửi dữ liệu -->
                                        <input type="hidden" name="CartItems[@i].MaSp" value="@item.MaSp" />
                                        <input type="hidden" name="CartItems[@i].TenSp" value="@item.TenSp" />
                                        <input type="hidden" name="CartItems[@i].Size" value="@item.Size" />
                                        <input type="hidden" name="CartItems[@i].DonGia" value="@item.DonGia" />
                                        <input type="hidden" name="CartItems[@i].SoLuong" value="@item.SoLuong" />
                                        <input type="hidden" name="CartItems[@i].ThanhTien" value="@item.ThanhTien" />
                                        <input type="hidden" name="CartItems[@i].GhiChu" value="@item.GhiChu" />
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="checkout__order__total">
                            <ul>
                                <li>Tổng tiền <span>@totalAmount.ToString("C0", culture)</span></li>
                            </ul>
                        </div>

                        <div class="checkout__order__widget">
                            <label for="tienmat">
                                Thanh toán khi nhận hàng
                                <input type="radio" id="tienmat" name="CheckoutMethod" value="tienmat" />
                                <span class="checkmark"></span>
                            </label>
                            <label for="banking">
                                Chuyển khoản ngân hàng
                                <input type="radio" id="banking" name="CheckoutMethod" value="banking" />
                                <span class="checkmark"></span>
                            </label>
                            <label for="wallet">
                                Ví điện tử
                                <input type="radio" id="wallet" name="CheckoutMethod" value="wallet" />
                                <span class="checkmark"></span>
                            </label>
                        </div>

                        <!-- QR CODE -->
                        <div id="qr-section" class="mt-3" style="display: none;">
                            <div id="qr-banking" style="display: none;">
                                <p><strong>Quét mã để chuyển khoản ngân hàng:</strong></p>
                                <img src="~/img/banking/chuyenkhoan.jpg" alt="QR Banking" class="img-fluid rounded" style="max-width: 100%;" />
                            </div>
                            <div id="qr-wallet" style="display: none;">
                                <p><strong>Quét mã để thanh toán qua ví điện tử:</strong></p>
                                <img src="~/img/banking/vimomo.jpg" alt="QR Wallet" class="img-fluid rounded" style="max-width: 100%;" />
                            </div>
                        </div>

                        <button type="submit" class="site-btn mt-3">Đặt hàng</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Checkout Section End -->
@section Scripts {
    <script>
        // Cảnh báo nếu chưa chọn phương thức thanh toán
        document.querySelector('form.checkout__form').addEventListener('submit', function (e) {
            const checked = document.querySelector('input[name="CheckoutMethod"]:checked');
            if (!checked) {
                e.preventDefault();
                alert("Vui lòng chọn phương thức thanh toán.");
            }
        });

        const radios = document.querySelectorAll('input[name="CheckoutMethod"]');
        const qrSection = document.getElementById('qr-section');
        const qrBanking = document.getElementById('qr-banking');
        const qrWallet = document.getElementById('qr-wallet');

        radios.forEach(radio => {
            radio.addEventListener('change', function () {
                if (this.value === "banking") {
                    qrSection.style.display = "block";
                    qrBanking.style.display = "block";
                    qrWallet.style.display = "none";
                } else if (this.value === "wallet") {
                    qrSection.style.display = "block";
                    qrWallet.style.display = "block";
                    qrBanking.style.display = "none";
                } else {
                    qrSection.style.display = "none";
                    qrBanking.style.display = "none";
                    qrWallet.style.display = "none";
                }
            });
        });
    </script>
}
